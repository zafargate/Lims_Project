<?xml version="1.0" encoding="UTF-8"?>

<Configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="log4j2.xsd" status="WARN">

<Properties>
    <Property name="basePath">./logs</Property>
</Properties>

<Appenders>
   <Console name = "Console" target="SYSTEM_OUT">
     
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
   </Console>
   
   <RollingFile name ="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-MMM-ddd}">
   <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n " > </PatternLayout>
   <SizeBasedTriggeringPolicy size="50000"/>
   </RollingFile>
</Appenders>

<Loggers>
  <Root level="Debug"><!-- -->
    <AppenderRef ref="File"/>
  </Root>
</Loggers>
 
</Configuration>